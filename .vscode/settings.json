{
    "window.zoomLevel": -1,
    // "python.languageServer": "None",
    "python.experiments.optOutFrom": [
        "pythonJediLSP"
    ],
    "python.defaultInterprterPath": "/home/jorzel/.pyenv/versions/recruitment/",
    "python.linting.mypyEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=E302,C0111,E503,E501",
        "--max-line-length=88",
    ],
    "python.linting.pylintEnabled": false,
    "python.linting.pylintArgs": [
        [
            "--disable=all"
        ]
    ],
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.testing.pytestEnabled": true,
    "files.autoSave": "off",
    "files.trimTrailingWhitespace": true,
    "editor.formatOnSave": true,
    "editor.rulers": [
        88,
    ],
    "python.formatting.blackPath": "/home/jorzel/.pyenv/versions/recruitment/bin/black",
    "python.formatting.blackArgs": [
        "--line-length=88"
    ],
    "python.sortImports.path": "/home/jorzel/.pyenv/versions/recruitment/bin/isort",
    "python.sortImports.args": [
        "--color"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "eslint.validate": [
        "javascript"
    ],
    "launch": {
        "configurations": [],
        "compounds": []
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "python.formatting.provider": "black",
}